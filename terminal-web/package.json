{
  "name": "@floegence/floeterm-terminal-web",
  "version": "0.1.3",
  "description": "Headless ghostty-web (xterm.js API-compatible) integration with data flow utilities. Provides TerminalCore and a React hook without UI components.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floegence/floeterm.git",
    "directory": "terminal-web"
  },
  "bugs": {
    "url": "https://github.com/floegence/floeterm/issues"
  },
  "homepage": "https://github.com/floegence/floeterm#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": [
    "dist/styles/*.css"
  ],
  "scripts": {
    "build": "node -e \"const fs=require('fs'); fs.rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json && node -e \"const fs=require('fs'); if (fs.existsSync('src/styles')) fs.cpSync('src/styles', 'dist/styles', { recursive: true })\"",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "terminal",
    "ghostty",
    "ghostty-web",
    "pty",
    "websocket",
    "shell"
  ],
  "dependencies": {
    "ghostty-web": "^0.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
